<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">
  <div>
    <img src="<%= book.coverImagePath %>" class="book-cover" />
    <div class="book-details-btn-grid">
      <a href href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
      <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
      <a
        href="/authors/<%= book.author.id %>"
        class="btn btn-primary btn-view-author"
        >View Author</a
      >
    </div>
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Author:</div>
    <div>
      <%= book.author.name %>
    </div>
    <div class="book-details-label">Publish Data:</div>
    <div>
      <%= book.publishDate.toDateString() %>
    </div>
    <div class="book-details-label">Page Count:</div>
    <div>
      <%= book.pageCount %>
    </div>
    <div class="book-details-label">Description:</div>
    <div>
      <%= book.description %>
    </div>
  </div>
</div>
