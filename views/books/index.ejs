<h2 class="page-header">Search Books</h2>
<form action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= searchOptions.title %>"
      />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="publishAfter">Published After</label>
      <input
        type="date"
        name="publishAfter"
        id="publishAfter"
        value="<%= searchOptions.publishAfter %>"
      />
    </div>
    <div class="form-item">
      <label for="publishBefore">Published Before</label>
      <input
        type="date"
        name="publishBefore"
        id="publishBefore"
        value="<%= searchOptions.publishBefore %>"
      />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br />
<%- include('../partials/bookGrid', { books: books, large: true }) %>
